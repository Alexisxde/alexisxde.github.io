---
import Footer from '@components/Footer.astro'
import Navegation from '@components/Navegation.astro'
import '@fontsource/poppins'
import ViewTransitions from 'astro/components/ViewTransitions.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio donde verÃ¡s mis proyectos." />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="mx-auto my-0 max-w-6xl bg-light text-dark transition-colors dark:bg-dark dark:text-light">
    <Navegation />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
