---
import { about } from "@/cv.json"
const { paragraphs, title } = about
---

<section class="flex flex-wrap gap-4 mt-8">
	<h2 class="text-xl font-semibold">{title}</h2>
	<div class="flex flex-col gap-4">
		{
			paragraphs.map(p => (
				<p class="text-sm text-neutral-300 text-pretty">{p}</p>
			))
		}
	</div>
</section>
