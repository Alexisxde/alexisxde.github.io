---
import { tools } from "@/cv.json"
import NextJSIcon from "@/icons/logos/nextjs.svg"
import SupabaseIcon from "@/icons/logos/supabase.svg"
import { Icon } from "astro-icon/components"

const { title, items } = tools
---

<section class="flex flex-wrap gap-4 mt-8">
	<h2 class="text-xl font-semibold">{title}</h2>
	<div class="flex flex-wrap gap-2">
		{
			items.map(({ logo, name }) => (
				<span class="py-2 px-4 rounded-md text-xs pointer-events-none flex items-center justify-center gap-x-1 capitalize ring-1 ring-inset bg-neutral-600/10 text-neutral-400 ring-neutral-700/30">
					{logo === "nextjs" ? (
						<NextJSIcon class="size-4" />
					) : logo === "supabase" ? (
						<SupabaseIcon class="size-4" />
					) : (
						<Icon name={`logos/${logo}`} class="size-4" />
					)}
					{name}
				</span>
			))
		}
	</div>
</section>
