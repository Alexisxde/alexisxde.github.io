---
import Layout from "@/layouts/Layout.astro"
// import About from "@/sections/about.astro"
import Projects from "@/sections/projects.astro"
import Education from "@/sections/education.astro"
import Hero from "@/sections/hero.astro"
import Tools from "@/sections/tools.astro"
// import GitFeed from "@/sections/git-feed.astro"
---

<Layout title="Alexisxde | Portfolio">
	<div class="absolute h-32 md:h-44 w-full -z-1">
		<svg
			class="size-full opacity-60 stroke-neutral-900/20 dark:stroke-neutral-100/20"
			fill="none">
			<defs>
				<pattern
					id=":S1:"
					x="0"
					y="0"
					width="10"
					height="10"
					patternUnits="userSpaceOnUse">
					<path d="M-3 13 15-5M-5 5l18-18M-1 21 17 3"></path>
				</pattern>
			</defs>
			<rect stroke="none" fill="url(#:S1:)" width="100%" height="100%"></rect>
		</svg>
	</div>
	<main class="max-w-3xl mx-auto px-5 md:px-10">
		<Hero />
		<Projects />
		<Tools />
		<Education />
		<!-- <GitFeed /> -->
		<!-- <About /> -->
	</main>
</Layout>
