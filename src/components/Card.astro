---
interface Props {
  class?: string
  delay?: string
}

const { class: className, delay } = Astro.props
---

<div
  class:list={[
    'rounded-2xl p-6 border text-dark bg-light border-border-light dark:text-light dark:bg-dark dark:border-border-dark transition-colors shadow-md opacity-0 translate-y-8 animate-fade-in',
    className
  ]}
  style={`animation-delay: calc(0.1s * ${delay})`}>
  <slot />
</div>
