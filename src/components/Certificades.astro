---
import Card from "@/components/Card.astro"
import { certificates } from "@data"
import { Icon } from "astro-icon/components"

interface Props {
	class: string
	delay: string
}

const { class: className, delay } = Astro.props
const { title, data } = certificates
---

<Card class:list={className} delay={delay}>
	<div class="flex flex-col justify-center gap-1">
		<h2 class="mb-2 text-2xl font-bold">{title}</h2>
		<div class="flex flex-col gap-4">
			{
				data?.map(({ rol, program, certificateLink, description }) => (
					<div class="w-full">
						<div class="inline-flex w-full items-center justify-between text-sm">
							<h3 class="text-lg font-semibold">{rol}</h3>
							<a
								href={certificateLink}
								target="_blank"
								class="transition-opacity hover:opacity-75">
								<Icon name="link" class="size-5" />
							</a>
						</div>
						<span class="mb-2 text-xs text-neutral-400">{program}</span>
						<p class="text-sm text-neutral-300">{description}</p>
					</div>
				))
			}
		</div>
	</div>
</Card>
