---
import Card from '@components/Card.astro'

interface Props {
  class: string
  delay: string
}

const { class: className, delay } = Astro.props
---

<Card class:list={className} delay={delay}>
  <figure class="border-l border-slate-500 pl-4 dark:border-slate-700">
    <blockquote
      class="text-sm italic leading-5 text-slate-600 dark:text-slate-400">
      “Todo lo que uno puede imaginar, otros podrán hacerlo realidad”
    </blockquote>
    <figcaption class="mt-2 text-xs leading-5 text-slate-500">
      Julio Verne
    </figcaption>
  </figure>
</Card>
