---
import Card from '@components/Card.astro'

interface Props {
  class: string
  delay: string
}

const { class: className, delay } = Astro.props
---

<Card class:list={className} delay={delay}>
  <div class="flex flex-col justify-center gap-1">
    <div class="flex items-start justify-between">
      <h2 class="mb-2 text-2xl font-bold">Ahora</h2>
      <span class="relative mt-2 flex size-3">
        <span
          class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"
        ></span>
        <span class="relative inline-flex h-3 w-3 rounded-full bg-green-500"
        ></span>
      </span>
    </div>
    <p class="text-pretty text-sm opacity-75">Actualmente estudiando.</p>
  </div>
</Card>
