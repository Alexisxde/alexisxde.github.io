---
import Badge from '@components/Badge.astro'
import Card from '@components/Card.astro'
import { skills } from '@data'
import { Icon } from 'astro-icon/components'

interface Props {
  class: string
  delay: string
}

const { title, icons } = skills
const { class: className, delay } = Astro.props
---

<Card class:list={className} delay={delay}>
  <div class="flex flex-col justify-center gap-1">
    <h2 class="mb-2 text-2xl font-bold">{title}</h2>
    <div class="flex w-full flex-wrap items-center gap-2">
      {
        icons.map(({ label, icon, custom }) => (
          <Badge name={label}>
            <Icon name={icon} class:list={custom} />
          </Badge>
        ))
      }
    </div>
  </div>
</Card>
