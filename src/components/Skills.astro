---
import Badge from '@components/Badge.astro'
import Card from '@components/Card.astro'
import { Icon } from 'astro-icon/components'

interface Props {
  class: string
  delay: string
}

const skills = [
  {
    label: 'React',
    icon: 'react',
    custom: 'size-6'
  },
  {
    label: 'Astro',
    icon: 'astro',
    custom: 'size-6'
  },
  {
    label: 'Git',
    icon: 'git',
    custom: 'size-5'
  },
  {
    label: 'Tailwind CSS',
    icon: 'tailwind-css',
    custom: 'size-6'
  },
  {
    label: 'MySQL',
    icon: 'mysql',
    custom: 'size-6'
  },
  {
    label: 'Codeigniter',
    icon: 'codeigniter',
    custom: 'size-5'
  },
  {
    label: 'Figma',
    icon: 'figma',
    custom: 'size-4'
  }
] as const

const { class: className, delay } = Astro.props
---

<Card class:list={className} delay={delay}>
  <div class="flex flex-col justify-center gap-1">
    <h2 class="mb-2 text-2xl font-bold">Habilidades</h2>
    <div class="flex w-full flex-wrap items-center gap-2">
      {
        skills.map(({ label, icon, custom }) => (
          <Badge name={label}>
            <Icon name={icon} class:list={custom} />
          </Badge>
        ))
      }
    </div>
  </div>
</Card>
