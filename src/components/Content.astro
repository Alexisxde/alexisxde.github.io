---
import AboutMe from '@/components/AboutMe.astro'
import Card from '@/components/Card.astro'
import Certificades from '@/components/Certificades.astro'
import Hero from '@/components/Hero.astro'
import Projects from '@/components/Projects.astro'
import Skills from '@/components/Skills.astro'
import Study from '@/components/Study.astro'
import Test from '@/components/Test.astro'
---

<div class="grid grid-cols-3 grid-rows-9 gap-4 py-4 px-8">
  <Card class="col-span-2 row-span-2" delay="1"><Hero /></Card>
  <Card class="col-start-3 row-span-2 row-start-1" delay="2"><Skills /></Card>
  <Card class="row-span-7 row-start-3" delay="3"><Projects /></Card>
  <Card class="row-span-2 row-start-3" delay="4"><Study /></Card>
  <Card class="col-start-3 row-span-4 row-start-3" delay="5"><Test /></Card>
  <Card class="col-start-2 row-span-2 row-start-5" delay="6"><AboutMe /></Card>
  <Card class="col-span-2 row-span-3 col-start-2 row-start-7" delay="7"
    ><Certificades /></Card
  >
</div>
