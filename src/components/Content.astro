---
import AboutMe from '@components/AboutMe.astro'
import Card from '@components/Card.astro'
import Certificades from '@components/Certificades.astro'
import Hero from '@components/Hero.astro'
import Projects from '@components/Projects.astro'
import Skills from '@components/Skills.astro'
import Study from '@components/Study.astro'
import Test from '@components/Test.astro'
---

<section
  class="grid grid-cols-1 grid-rows-none gap-4 px-4 py-4 lg:grid-cols-3 lg:grid-rows-9">
  <Card class="row-span-2 lg:col-span-2" delay="1"><Hero /></Card>
  <Card class="row-span-2 lg:col-start-3 lg:row-start-1" delay="2"
    ><Skills /></Card
  >
  <Card class="lg:row-span-7 lg:row-start-3" delay="3"><Projects /></Card>
  <Card class="row-span-2 lg:row-start-3" delay="4"><Study /></Card>
  <Card class="row-span-4 lg:col-start-3 lg:row-start-3" delay="5"
    ><Test /></Card
  >
  <Card class="row-span-2 lg:col-start-2 lg:row-start-5" delay="6"
    ><AboutMe /></Card
  >
  <Card class="row-span-3 lg:col-span-2 lg:col-start-2 lg:row-start-7" delay="7"
    ><Certificades /></Card
  >
</section>
